header
    height: 600px
    position: relative

    a
        color: title-font-color
        text-decoration: none

    #site-branding
        padding-top: 150px
        text-align: center
        line-height: 0

        #site-title
            line-height: 50px
            font-size: 80px
            text-shadow: 1px 1px 0px #FF0000, -1px -1px 0px #0091FF;

        #site-description
            font-style: italic
            font-size: 20px

    #navBar
        position: absolute
        bottom: 0
        height: 40px
        width: 100%
        display: flex
        justify-content: center
        overflow: hidden
        
        li
            height 40px
            padding: 0 20px
            text-align: center
            display: inline-block
            transition: .15s ease-in-out
            border-bottom: 3px solid main-color
            &:hover
                height: 37px
        a
            display: block
            font-size: 20px
            text-shadow: 0px 1px 5px font-shadow-color
            line-height: 40px

#article-header
    position: absolute
    height: 30px
    margin: 30px
    text-shadow: 0px 1px 5px font-shadow-color

    i
        font-size: 30px