font-color = #ACB3C2;

.posts
  // border: 1px solid red;
  margin: 3em 0;
  background:white;
  box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.05);
  border-radius: 15px;
  font-size: 15px;
  &:hover
    box-shadow: 0px 40px 60px rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
    transition: all 0.2s linear;

  .post-thumbnail
    width: 100%;
    height: 200px;
    border-radius: 15px 15px 0 0;
    padding: 20px;

    box-sizing: border-box;
    display: flex;
    flex-grow: 1;
    flex-direction: row;
    align-items: flex-end;
    background-size: cover;

    .post-title
        font-size: 20px;
        color: white;
        // text-shadow: 

  .post-content
    padding: 20px;

    .post-footer
      height: 24px;
      display: flex;
      align-items: center;
      margin-top: 15px;
      justify-content: space-between;

      .post-info
        display: flex;
        align-items: center;
        
        .avatar
          width: 24px;
          height 24px;
          border-radius: 50%;
          margin-right: 10px;

      .post-label
        color: font-color;

      .post-category
        color: red;
