// Post Header Style
.artical-header
	position absolute
	margin 30px 0 0 30px
	
// Artical Style
#artical-banner
	width 100%
	height 500px
	color white

	a
		color white

	.artical-info
		display flex
		align-items center
		height 500px
		width 720px
		margin 0 auto

		font-size 14px
		text-shadow 0 2px 3px black

		.artical-title
			font-size 56px

		span:not(:last-child):after
			content "\00a0/\00a0"

main > article
	width 640px
	margin 0 auto
	padding 50px 40px

	position relative
	top -100px

	font-size 16px

	color black
	background-color white
	box-shadow 0px 20px 40px rgba(0, 0, 0, 0.1)
	border-radius 30px

	.artical-footer
		width 600px
		height 65px
		margin 50px auto 0
		background rgba(0, 0, 0, 0.05)
		box-shadow inset 0px 1px 2px rgba(0, 0, 0, 0.05)
		border-radius 20px
		
		font-size 13px

		display flex
		align-items center

		img
			width 35px
			height 35px
			border-radius 50%
			margin 0 10px 0 20px