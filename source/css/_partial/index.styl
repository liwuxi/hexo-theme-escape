font-color = #ACB3C2;

.posts
  // border: 1px solid red;
  width: 750px;

  margin: 3em auto;
  background:white;
  box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.05);
  border-radius: 15px;
  font-size: 15px;
  &:hover
    box-shadow: 0px 40px 60px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);

  a
    color: font-color;

  .post-thumbnail
    width: 100%;
    height: 200px;
    border-radius: 15px 15px 0 0;
    padding: 20px;

    box-sizing: border-box;
    display: flex;
    flex-grow: 1;
    flex-direction: row;
    align-items: flex-end;
    background-size: cover;

    .post-title
      font-size: 20px;
      color: white;
      text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);

  .post-content
    padding: 20px;

    .post-footer
      height: 24px;
      display: flex;
      align-items: center;
      margin-top: 15px;
      justify-content: space-between;

      .post-info
        display: flex;
        align-items: center;

        .avatar
          width: 24px;
          height 24px;
          border-radius: 50%;
          margin-right: 10px;

      .post-label
        color: font-color;
      
      .post-categories-item
        padding: 0px 2px;

      .post-tags-item
        padding: 2px 10px;
        background-color: #F5F5F5;
        border-radius: 8px;
        &:hover
          color: rgb(51, 51, 51);
          background-color: rgb(194, 194, 194);