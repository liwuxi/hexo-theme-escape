.posts
    width: 640px
    background: card-bg-color
    border-radius: 15px
    box-shadow: 0px 20px 40px post-shadow
    box-sizing: border-box
    margin: 70px auto

    &:hover
        box-shadow: 0px 40px 60px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);

    // &(:first-of-type)(:last-of-type)
    //     margin: 70px auto
    // &:first-child
    //     margin-top: 0px

    .post-thumbnail
        height: 200px
        border-radius: 15px 15px 0px 0px
        position: relative
        background-size: cover
        background-position: center
        overflow: hidden

        .post-title
            position: absolute
            bottom: 20px
            left: 20px 
            text-shadow: 1px 1px black
    
    .post-title
        font-size: 20px
        color: title-font-color

    .noThumbnail
        color: title-nt-font-color
        display: block
        padding: 20px 0 0 20px

    .post-content
        padding: 15px 20px
        color: excerpt-font-color
        font-size: 15px
        line-height: 21px

        p
            margin: 0

    .post-footer
        padding: 0 20px 15px
        color: info-font-color
        font-size: 14px
        height: 24px

        display: flex
        justify-content: space-between
        align-items: center

        .avatar
            width: 24px
            height: 24px
            border-radius: 50%
            
        .post-label, .avatar
            vertical-align: middle

        a
            color: info-font-color

        .post-tags-item
            background: #F5F5F5
            border-radius: 10px
            padding: 0 8px

            &:hover
                background: #000
                color: #FFF

    a
        text-decoration: none

    hr
        margin: 20px 20px 0
        border: 0.5px solid post-shadow


.navigation
    width: 640px
    margin: 0 auto
    font-size: 20px
    text-align: center

    a
        color: main-color
        text-decoration: none
    
    .page-number
        width: 30px
        display: inline-block
        margin: 0 10px
        background-color: post-shadow
        text-align: center
        line-height: 30px
        border-radius: 5px
        color: font-color

    .current
        background-color: main-color
        color: card-bg-color
    
    .extend
        margin: 0 10px