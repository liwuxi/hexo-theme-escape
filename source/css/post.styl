#article-banner
    height: 500px
    color: title-font-color

    a
        color: title-font-color
        text-decoration: none
    
    .article-info
        height: 400px
        width: 720px
        margin: 0 auto
        display: flex
        align-items: center
        text-shadow 0 2px 2px title-font-shadow-color

        .article-title
            font-size: 36px
            
        span:not(:last-child):after
            content "\00a0/\00a0"

#article
    width: 640px
    margin: 0 auto
    position: relative
    top: -100px
    background-color: card-bg-color
    box-shadow: 0 20px 40px card-bg-shadow-color
    border-radius: 30px
    padding: 50px 40px

    .article-footer
        width: 600px
        height: 65px
        background-color: post-shadow
        box-shadow: inset 0 1px 2px post-shadow
        border-radius: 20px
        margin: 50 auto 0
        font-size 13px

        display:flex
        align-items: center

        img
            width: 35px
            height: 35px
            border-radius: 50%
            margin 0 10px 0 20px

        p
            margin: 5px 0

        a
            text-decoration: none

#post-paginator
    width: 640px
    margin: -50px auto 50px
    display: flex
    justify-content: space-between

    .paginator-item
        display: flex
        align-items: center
        cursor: pointer
        transition: all 0.3s ease
        color: paginator-color
        text-decoration none

        &:hover
            color: main-color
            transform: translate(-10px, 0)


        a
            font-size: 15px
            color: paginator-color
            text-decoration: none
            transition: all 0.3s ease
            &:hover
                color: main-color

        .iconfont
            margin: 0 5px
            font-size: 25px

    .paginator-item:last-child
        &:hover
            transform: translate(10px, 0)

.comment
    width: 740px
    margin: 0 auto