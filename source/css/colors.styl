:root
  --background-color: #F8F9FA;
  --background-content: #FFFFFF;

  --font-color-title: #505A6E;
  --font-color-text: #505A6E;
  --font-color-sub: #ACB3C2;
  --font-color-inverse: #FFFFFF;
  --font-color-link: #002D8B;

  --button-color-normal: #F5F5F5;
  --button-color-hover: #002D8B;
  --button-color-special: #E02020;

  --shadow-color: rgba(0, 0, 0, .1);
  --shadow-color-hover: rgba(0, 0, 0, .15);
  --shadow-color-inner: rbga(0, 0, 0, .05);
  --shadow-color-text: rgb(0, 0, 0);

.dark 
  --background-color: #1A202C;
  --background-content: #2E3748;

  --font-color-title: #EDF2F8;
  --font-color-text: #A0AEC0;
  --font-color-sub: #7C8A9E;
  --font-color-inverse: #FFFFFF;
  --font-color-link: #3298dc;

  --button-color-normal: #1A202C;
  // --button-color-hover: #718096;
  --button-color-hover: #3298dc;
  --button-color-special: #E6FFFA;

  --shadow-color: rgba(0, 0, 0, .1);
  --shadow-color-hover: rgba(0, 0, 0, .15);
  --shadow-color-inner: rbga(0, 0, 0, .8);
  --shadow-color-text: rgb(0, 0, 0);


/*
 * Background Colors
 */
background-page = var(--background-color)
background-content = var(--background-content)

/*
 * Font Colors
 */
font-color-title = var(--font-color-title)
font-color-text = var(--font-color-text)
font-color-sub = var(--font-color-sub)
font-color-inverse = var(--font-color-inverse)
font-color-link = var(--font-color-link)

/*
 * Button Colors
 */
button-color-normal = var(--button-color-normal)
button-color-hover = var(--button-color-hover)
button-color-special = var(--button-color-special)

/*
 * Shadow Colors
 */
shadow-color = var(--shadow-color)
shadow-color-hover = var(--shadow-color-hover)
shadow-color-inner = var(--shadow-color-inner)
shadow-color-text = var(--shadow-color-text)

