:root
  --background-color: rgb(248, 249, 250);
  --post-background-color: rgb(255, 255, 255);

.dark 
  --background-color: #232222;
  --post-background-color: rgb(34, 34, 34);

/*
 * Theme Colors
 */
main-color = rgb(0, 45, 139);
background-color = var(--background-color);
post-background-color = var(--post-background-color);

/*
 * Font Colors
 */
font-color = rgba(0, 0, 0, .25);
font-color-hover = rgba(0, 0, 0, .8);
font-color-grey = rgba(0, 0, 0, .3);
font-color-inverse = rgb(255, 255, 255);
font-color-article = rgb(0, 0, 0, .25);

/*
 * Shadow Colors
 */
shadow-color = rgba(0, 0, 0, .1);
shadow-color-hover = rgba(0, 0, 0, .15);

/*
 * Background Colors
 */
article-color = rgb(68, 68, 68);
code-color = rgb(238, 238, 238);
hr-color = rgb(221, 221, 221);
code-bg-color = rgb(1, 22, 39);

/*
 * Post Colors
 */
title-font-color = rgb(255, 255, 255);
title-nt-font-color = rgb(0, 0, 0);
title-font-shadow-color = rgb(0, 0, 0);
excerpt-font-color = rgb(80, 90, 110);
info-font-color = rgb(172, 179, 194);

/*
 * Index Colors
 */
card-bg-color = rgb(255, 255, 255);
card-bg-shadow-color = rgba(0, 0, 0, 0.1);
post-shadow = rgba(0, 0, 0, 0.05);

/*
 * Plugin Colors
 */
paginator-color = rgba(0, 0, 0, 0.5);
goup-color = rgb(224, 32, 32);
