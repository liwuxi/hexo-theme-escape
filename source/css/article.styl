#article
    color: article-color
    line-height: 1.7em
    position: relative

    /*
     *  Article font Style
     */
    a
        color: main-color
        text-decoration: none
        &:hover
            text-decoration: underline

    h1
        font-size: 2rem
        border-bottom: 1px dashed hr-color
        padding-bottom: 0.3em
    
    h2
        font-size: 1.6rem
        border-bottom: 1px dashed hr-color
        padding-bottom: 0.3em
    
    h3
        font-size: 1.4rem

    h4
        font-size: 1.2rem

    h5
        font-size: 1rem
    
    h6
        font-size: 0.8rem

    h1, h2, h3, h4, h5, h6
        line-height: 1.25
        margin: 24px 0 16px 0
        font-weight: 600


    /*
     *  Code highlight Style
     */
    .highlight
        margin: 10px -40px
        padding: 0 40px
        overflow: auto
        background-color: code-bg-color

        .hljs, pre
            background: transparent !important
            padding: 0

        .code, .gutter
            padding-left: 0

        table, th, td
            border: none
    

    /*
     *  Article content Style
     */
    img
        max-width: 100%

    ol
        padding-left: 20px
        li
            ul
                padding-left: 20px

    ul
        padding-left: 20px

    hr
        border: none
        border-bottom: 1px dashed hr-color

    p, pre
        code
            font-size: 90%
            padding: 0 0.3em
            background-color: code-color
            border-radius: 3px

    dl pre
        background-color: code-bg-color
        margin: 10px -40px
        padding: 1em 40px

    table
        border-collapse: collapse
        empty-cells: show
        border: 1px solid #dedede

        th, td
            border: 1px solid #dedede
            padding: 5px 10px

        tr:nth-child(2n)
            background-color: rgb(246, 248, 250)
        
        code
            font-size: 90%
            padding: 0 0.3em
            background-color: code-color
            border-radius: 3px

    blockquote
        margin: 0
        padding: 0 1em
        border-left: 0.2em solid main-color

    kbd
        padding: 0 0.3em
        border-radius: 3px
        font-size: 80%
        border: 1px solid rgb(204, 204, 204)
        box-shadow: 0px 1px 0px rgba(0,0,0,0.2), inset 0px 0px 0px 2px #ffffff

    .video-container
        position: relative
        padding-top: (9 / 16 * 100)% // 16:9 ratio
        height: 0
        overflow: hidden
        
        iframe, object, embed
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            margin-top: 0


    /*
     *  Article TOC Style
     */
    #article-toc
        position: absolute
        left: 102%
        top: 150px
        white-space: nowrap
        font-size: 0.8em

        li
            list-style: none

        .fixed
            position: fixed
            top: 0

        for i in (1..6)
            .toc-level-{i} .toc-text 
                margin-left: i em

        .toc-link
            color: font-color
            display: inline-block
            border-left: 2px solid transparent
            &:hover
                text-decoration: none

        .toc-child
            margin-left: 0
            padding-left: 0

        .toc-item
            &:hover > .toc-link
                text-decoration: underline
                .toc-text
                    color: main-color

            &.active > .toc-link
                    color: main-color
                    border-left: 2px solid main-color
                    font-weight: bold

        if(hexo-config('toc.hide_child'))
            .toc-child
                display: none
        
            .toc-item.active .toc-child
                display: block
