#article
    color: article-color
    line-height: 1.7em

    /*
     * Font Style
     */
    a
        color: main-color
        text-decoration: none
        &:hover
            text-decoration: underline

    h1
        font-size: 2rem
        border-bottom: 1px dashed hr-color
        padding-bottom: 0.3em
    
    h2
        font-size: 1.6rem
        border-bottom: 1px dashed hr-color
        padding-bottom: 0.3em
    
    h3
        font-size: 1.4rem

    h4
        font-size: 1.2rem

    h5
        font-size: 1rem
    
    h6
        font-size: 0.8rem

    h1, h2, h3, h4, h5, h6
        // display: block
        line-height: 1.25;
        margin: 24px 0 16px 0
        font-weight: 600


    /*
     *  Code highlight Style
     */
    .highlight
        margin: 10px -40px
        padding: 0 40px
        overflow: auto
        background-color: code-bg-color

        .hljs, pre
            background: transparent !important
            padding: 0

        .code, .gutter
            padding-left: 0

        table, th, td
            border: none
   
    img
        max-width: 100%

    ol
        padding-left: 20px
        li
            ul
                padding-left: 20px

    ul
        padding-left: 20px

    hr
        border: none
        border-bottom: 1px dashed hr-color

    p
        code
            font-size: 90%
            padding: 0 0.3em
            background-color: code-color
            border-radius: 3px

    dl pre
        background-color: code-bg-color
        margin: 10px -40px
        padding: 1em 40px

    table
        border-collapse: collapse
        empty-cells: show
        border: 1px solid #dedede

        th, td
            border: 1px solid #dedede
            padding: 5px 10px

        tr:nth-child(2n)
            background-color: rgb(246, 248, 250)
        
        code
            font-size: 90%
            padding: 0 0.3em
            background-color: code-color
            border-radius: 3px

    blockquote
        margin: 0
        padding: 0 1em
        border-left: 0.2em solid main-color
