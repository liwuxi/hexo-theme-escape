<div id="article-banner" style="background: url('<%- page.thumbnail %>') center/cover;">
  <div class="article-info">
      <div>
        <h1 class="article-title"><%= page.title %></h1>
        <span>
            <% page.categories.forEach(function(category, index) { %>
                <a href='<%= url_for(category.path) %>'><%= category.name %></a>
            <% }); %>
        </span>
        <span><%- date(page.date, "YYYY-MM-DD") %></span>
        <span>22 条评论</span>
      </div>
  </div>
</div>
<article id="article">
  <%- page.content %>
  <div class="article-footer">
    <img src="<%- theme.basic.avatar %>" alt="Author avatar">
    <div class="article-footer-text">
      <p>
        <%- config.author %>
      </p>
      <p><%- theme.license %></p>
    </div>
  </div>
</article>
<%- partial('_partial/paginator/post-paginator') %>
<%- partial('_partial/discussion') %>
