<!DOCTYPE html>
<html lang="<%= config.language %>">
  <head>
    <%- partial('_partial/head') %>
  </head>
  <body>
    <% if (is_post()) { %>
      <%- partial('_partial/header/post-header') %>
    <% } else if (page.layout === 'about' || page.layout === 'links') { %>
      <%- partial('_partial/header/page-header') %>
    <% } else { %>
      <%- partial('_partial/header/header') %>
    <% } %>
    <main id="main">
      <%- body %>
    </main>
    <%- partial('_partial/footer', {}, {cache: true})%>
  </body>
</html>